Gerenciador:

    Login:
        name:'login'
    NewUser:
        name:'newuser'
    PresencasHotel:
        name: 'hotel'
    Menu:
        name: 'menu'
    Chegadas:
        name: 'chegadas'
    PresencasCreche:
        name: 'creche'
    PresencasDayCare:
        name: 'daycare'

<TwoItemWithCheck>:
    RightCheckbox:
        name:'rightcheckbox'

<NewUser>:
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            MDLabel:
                pos_hint:{"center_y":0.9}
                size_hint_y: None
                id:lblcadastrar
                halign: "center"
                text:"Cadastrar novo usuário"

        MDBoxLayout:
            pos_hint:{"center_y":0.8, "center_x": 0.5}
            size_hint:0.8, None
            orientation: "vertical"
            spacing: "20dp"
            MDTextField:
                id: nome
                pos_hint:{"center_x": 0.5}
                size_hint: 0.8, None
                hint_text: "Nome"
                write_tab: False
                multiline: False
            MDTextField:
                id: username_cadastro
                pos_hint:{"center_x": 0.5}
                size_hint: 0.8, None
                hint_text: "Nome de Usuário"
                write_tab: False
                multiline: False
                helper_text: "Mínimo de 7 Caracteres para nome e sobrenome"
                helper_text_mode: "on_error"
            MDTextField:
                id: email
                pos_hint:{"center_x": 0.5}
                size_hint: 0.8, None
                hint_text: "Email"
                write_tab: False
                multiline: False
            MDTextField:
                id: senha_cadastro
                pos_hint:{"center_x": 0.5}
                size_hint: 0.8, None
                hint_text: "Senha"
                write_tab: False
                multiline: False
                password: True
                helper_text: "Mínimo de 7 Caracteres para nome e sobrenome"
                helper_text_mode: "on_error"
            MDTextField:
                id: confirma_senha
                pos_hint:{"center_x": 0.5}
                size_hint: 0.8, None
                hint_text: "Confirme a Senha"
                write_tab: False
                multiline: False
                password: True
                helper_text: "Senha e confirmação não é a mesma."
                helper_text_mode: "on_error"

        MDBoxLayout:
            pos_hint:{"center_x": 0.5}
            size_hint: 0.8, None
            spacing: "70dp"
            padding: "30dp"
            MDFillRoundFlatButton:
                text: "OK"
                on_release: root.cadastrar_novo_usuario(nome.text, username_cadastro.text, email.text, senha_cadastro.text, confirma_senha.text)
            MDRoundFlatButton:
                text: "Voltar"
                on_release: root.manager.current = "login"

            MDRoundFlatButton:
                text: "Popular"
                on_release: root.popular()

<Login>:
    StackLayout:
        size_hint:0.75,0.75
        orientation:'lr-tb'
        pos_hint:{"right":0.875}
        spacing:'45dp'
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, None
            MDTextField:
                id: loginuser
                write_tab: False
                multiline: False
                hint_text: 'Nome de Usuario'
            MDTextField:
                id:userpass
                write_tab: False
                multiline: False
                password: True
                hint_text: 'Senha'
        BoxLayout:
            size_hint: 1, None
            # spacing: '35dp'
            MDFillRoundFlatButton:
                text:'Ok'
                size_hint: None, None
                # on_release: root.logar_usuario(loginuser.text, userpass.text)
                on_release: root.manager.current = 'menu'
            MDRoundFlatButton:
                size_hint:None, None
                pos_hint:{'right': 0.8}
                text: 'Cancelar'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None

            MDFillRoundFlatButton:
                text:"Sair"
                on_release: app.stop()

            MDTextButton:
                pos_hint:{'center_x':1}
                text:'Registrar'
                color:0,0,1,0.88
                on_release: root.manager.current = 'newuser'


<PresencasHotel>:
    ScrollView:
        size_hint:0.97, 0.87
        pos_hint:{"top":1}
        MDList:
            id: scrolllist
    BoxLayout:
        size_hint: None, None
        spacing:'50dp'
        pos_hint:{"x":(self.width/3)/self.width}
        MDFloatingActionButton:
            icon:'send'
            on_release: root.caes_no_hotel()
        MDFloatingActionButton:
            icon:'home'
            on_release: root.manager.current = "menu"

        MDFloatingActionButton:
            icon:'plus'
            on_release: app.show_add_dog_dialog(root)


<PresencasCreche>:
    ScrollView:
        size_hint:0.97, 0.87
