<PresencasDayCare>:
    BoxLayout:
        MDLabel:
            halign: 'center'
            text: 'EM BREVE'
    BoxLayout:
        size_hint: None, None
        spacing:'50dp'
        pos_hint:{"x":(self.width/3)/self.width}
        MDFloatingActionButton:
            icon:'send'
            # on_release: root.caes_no_hotel()
        MDFloatingActionButton:
            icon:'home'
            on_release: root.manager.current = "menu"

        MDFloatingActionButton:
            icon:'plus'
            # on_release: app.show_add_dog_dialog(root)
<Chegadas>:
    BoxLayout:
        size_hint: None, None
        spacing:'50dp'
        pos_hint:{"x":(self.width/2.25)/self.width}
        MDFloatingActionButton:
            icon:'home'
            on_release: root.manager.current = "menu"
<Menu>:
    GridLayout:
        rows: 4
        MDLabel:
            size_hint: 1, None
            text: 'Menu'
            halign: 'center'
        GridLayout:
            rows: 3
            id:gridmenu
        MDRaisedButton:
            md_bg_color: 0.8,0,0,0.65
            size_hint: 1, 0.15
            text: "Sair"
            on_press: app.logged = None
            on_release: app.stop()

<AddCaoPop>:
    orientation: 'vertical'
    spacing: "10dp"
    size_hint: 1, None
    BoxLayout:
        size_hint_x: 0.8
        pos_hint:{"center_y":0, "center_x": 0.5}
        MDTextField:
            id:addcaopop
            hint_text:'Nome do Cão'
    BoxLayout:
#        size_hint_x: 1
        spacing: self.width/2
        MDRoundFlatButton:
            text: "Cancelar"
            on_release: app.dialog.dismiss()
        MDFillRoundFlatButton:
            text: 'Ok'